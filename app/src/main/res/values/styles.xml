<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.UnoPad.AppBarLayout" parent="Widget.Design.AppBarLayout">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="TextAppearance.UnoPad.Title" parent="android:TextAppearance">
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.009375</item>
        <item name="lineHeight">24sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.UnoPad.Body" parent="android:TextAppearance">
        <item name="android:textColor">?android:textColor</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0.0</item>
        <item name="lineHeight">18sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextAppearance.UnoPad.Label" parent="android:TextAppearance">
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">10sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="lineHeight">12sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
    </style>

</resources>